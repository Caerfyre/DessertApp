
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/DessertAppTemplate.cshtml";
}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Categories</h1>

    <!-- Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add Dessert Type</h6>
        </div>
        <div class="card-body">

            <form method="post" action="AddingCategory">
                <div class="form-group">
                    <label>Dessert Type</label>
                    <input type="text" class="form-control" name="typeName" placeholder="Enter Type Name.." required>
                </div>

                <div class="form-group">
                    <label>Type Description</label>
                    <textarea class="form-control" name="typeDesc" aria-label="With textarea" placeholder="Enter Type Description.." required></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Add Dessert Type</button>

            </form>

        </div>
    </div>

</div>