
@{
    ViewBag.Title = "AddDessert";
    Layout = "~/Views/Shared/DessertAppTemplate.cshtml";
}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Dessert Products</h1>

    <!-- Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add Dessert Product</h6>
        </div>
        <div class="card-body">

            <form method="post" action="AddingDessert">
                <div class="form-group">
                    <label>Dessert Name</label>
                    <input type="text" class="form-control" name="dessertName" placeholder="Enter Dessert Name.." required>
                </div>


                <div class="form-group">
                    <label>Dessert Type</label>
                    @Html.DropDownList("DessertTypesList", ViewBag.dessertTypes as SelectList, "Please Select Dessert Type",
                     new { @class = "form-control"})
                </div>

                <div class="form-group">
                    <label>Dessert Price</label>
                    <input type="number" class="form-control" name="dessertPrice" placeholder="Enter Price.." required>
                </div>


                <button class="btn btn-primary" type="submit">Add Dessert Product</button>

            </form>

        </div>
    </div>

</div>