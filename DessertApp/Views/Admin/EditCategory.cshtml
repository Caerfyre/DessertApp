
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/DessertAppTemplate.cshtml";
}

@model DessertApp.DessertType

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Edit Category</h1>

    <!-- Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edit Dessert Type</h6>
        </div>
        <div class="card-body">

            @using (Html.BeginForm("EditingCategory", "Admin", FormMethod.Post))
            {
               
                @Html.HiddenFor(model => model.DessertTypeID)

                <div class="form-group">
                    <label>Edit Dessert Type Name</label>
                    @Html.TextBoxFor(model => model.TypeName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Edit Dessert Type Description</label>
                    @Html.TextAreaFor(model => model.TypeDesc, new { @class = "form-control" })
                </div>

                <button class="btn btn-primary" type="submit">Edit Dessert Type</button>
            }

        </div>
    </div>

</div>