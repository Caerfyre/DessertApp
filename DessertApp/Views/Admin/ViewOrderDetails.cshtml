@*@model IEnumerable<DessertApp.ViewModel.CartItem>*@
@*@model IEnumerable<DessertApp.ViewModel.OrderDetails>*@ 
@model DessertApp.ViewModel.OrderDetails
@{
    ViewBag.Title = "ViewOrderDetails";
    Layout = "~/Views/Shared/DessertAppTemplate.cshtml";
    
}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Order Details</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Order# @ViewData["orderID"]  Details</h6>
                <a class="btn btn-dark btn-sm" href="@Url.Action("ShowOrders","Admin")">
                    Return
                </a>
            </div>


        </div>
        <div class="card-body">
            <div class="table-responsive">

                <div>
                    @foreach (var info in Model.Orderinfo)
                    {
                        <div class="mx-4 form-inline justify-content-between">
                            <div class="form-group">
                                <p class="font-weight-bold mr-1">Customer Name:</p>
                                <p class="font-weight-normal">@info.CustomerFname @info.CustomerLname</p>
                            </div>
                            
                            <div class="form-group">
                                <p class="font-weight-bold mr-1">Date Ordered:</p>
                                <p class="font-weight-normal">@info.OrderDate.ToLongDateString()</p>
                            </div>
                            <div class="form-group">
                                <p class="font-weight-bold mr-1">Time Ordered:</p>
                                <p class="font-weight-normal">@info.OrderDate.ToShortTimeString()</p>
                            </div>
                        </div>

                        <div class="mx-4 form-inline justify-content-between">
                            <div class="form-group">
                                <p class="font-weight-bold mr-1">Customer ID:</p>
                                <p class="font-weight-normal">@info.CustomerID</p>
                            </div>
                            <div class="form-group">
                                <p class="font-weight-bold mr-1">Number of Items Ordered:</p>
                                <p class="font-weight-normal">@info.ItemCount Items</p>
                            </div>
                            <div class="form-group text-success">
                                <p class="font-weight-bold mr-1">Total Price:</p>
                                <p class="font-weight-normal">Php @info.TotalPrice.00</p>
                            </div>

                        </div>


                    }


                </div>


                <table class="table table-light table-striped table-active" width="100%" cellspacing="0">
                    <thead class="">
                        <tr>
                            <th>#</th>
                            <th>Dessert Name</th>
                            <th>Dessert Type</th>
                            <th>Quantity</th>
                            <th>Price</th>

                        </tr>
                    </thead>

                    <tbody class="">
                        @{ int count = 1; }
                        @foreach (var detail in Model.Cartitem)
                            
                        {
                            <tr>
                                <td>@(count++)</td>
                                <td>@detail.ProductName</td>
                                <td>@detail.ProductType</td>
                                <td>@detail.OrderQuantity</td>
                                <td>Php @detail.Price</td>

                            </tr>
                        }


                    </tbody>

                </table>

            </div>
        </div>
    </div>

</div>

