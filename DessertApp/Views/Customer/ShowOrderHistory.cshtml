@model IEnumerable<DessertApp.ViewModel.AllOrders>
@{
    ViewBag.Title = "ShowOrderHistory";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
    
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Order History</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Your Order History</h6>

            </div>


        </div>
        <div class="card-body">
            <div class="table-responsive">

                @if (Model != null && Model.Count() != 0)
                {
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Order ID</th>                          
                                <th>Item Count</th>
                                <th>Total Price</th>
                                <th>Order Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var order in Model)

                            {
                            <tr>
                                <td>@order.OrderID</td>                          
                                <td>@order.ItemCount</td>
                                <td>@order.TotalPrice</td>
                                <td>@order.OrderDate</td>
                                <td>
                                    <a href="ViewOrderDetails?orderID=@order.OrderID" class="btn btn-primary btn-sm">View Details</a>
                                    &nbsp;&nbsp;
                                    <a href="CancelOrder?orderID=@order.OrderID" class="btn btn-danger btn-sm">Cancel</a>

                                </td>
                            </tr>
                            }


                        </tbody>

                    </table>

                }
                else
                {
                    <p class="text-center">You haven't made any orders yet.</p>
                }



            </div>
        </div>
    </div>

</div>